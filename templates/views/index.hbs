        <script>
            function validateForm() {
                console.log("Form validation started."); // Check if the function is being called
        
                var mobileNo = document.getElementById("mobile_no").value;
                console.log("Mobile number:", mobileNo); // Check the value of the mobile number input
        
                // Regular expression to match 10-digit mobile numbers
                var mobileNoPattern = /^\d{10}$/;
                console.log("Pattern test result:", mobileNoPattern.test(mobileNo)); // Check if the regex pattern test passes
        
                if (!mobileNoPattern.test(mobileNo)) {
                    alert("Please enter a valid 10-digit mobile number.");
                    return false;
                }
                return true;
            }
        </script>
        
        
        
        


